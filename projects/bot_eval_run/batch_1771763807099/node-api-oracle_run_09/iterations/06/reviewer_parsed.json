{
  "openapi": "3.0.0",
  "info": {
    "title": "TODO API",
    "version": "1.0.0"
  },
  "paths": {
    "/health": {
      "get": {
        "summary": "Check the health of the server",
        "responses": {
          "200": {
            "description": "Server is healthy",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      },
      "/todos": {
        "get": {
          "summary": "Retrieve all TODO items",
          "responses": {
            "200": {
              "description": "A list of TODO items",
              "content": {
                "application/json": {
                  "schema": {
                    "$ref": "#/components/schemas/TodoList"
                  }
                }
              }
            }
          },
          "post": {
            "summary": "Create a new TODO item",
            "requestBody": {
              "required": true,
              "content": {
                "application/json": {
                  "schema": {
                    "$ref": "#/components/schemas/Todo"
                  }
                }
              }
            },
            "responses": {
              "201": {
                "description": "The created TODO item",
                "content": {
                  "application/json": {
                    "schema": {
                      "$ref": "#/components/schemas/Todo"
                    }
                  }
                }
              }
            }
          },
          "/todos/{id}": {
            "get": {
              "summary": "Retrieve a specific TODO item by ID",
              "parameters": [
                {
                  "name": "id",
                  "in": "path",
                  "required": true,
                  "schema": {
                    "type": "string"
                  }
                }
              ],
              "responses": {
                "200": {
                  "description": "The TODO item",
                  "content": {
                    "application/json": {
                      "schema": {
                        "$ref": "#/components/schemas/Todo"
                      }
                    }
                  }
                },
                "404": {
                  "description": "Not Found",
                  "content": {
                    "application/json": {
                      "schema": {
                        "$ref": "#/components/schemas/Error"
                      }
                    }
                  }
                }
              },
              "patch": {
                "summary": "Update a specific TODO item by ID",
                "parameters": [
                  {
                    "name": "id",
                    "in": "path",
                    "required": true,
                    "schema": {
                      "type": "string"
                    }
                  }
                ],
                "requestBody": {
                  "required": true,
                  "content": {
                    "application/json": {
                      "schema": {
                        "$ref": "#/components/schemas/TodoUpdate"
                      }
                    }
                  }
                },
                "responses": {
                  "200": {
                    "description": "The updated TODO item",
                    "content": {
                      "application/json": {
                        "schema": {
                          "$ref": "#/components/schemas/Todo"
                        }
                      }
                    }
                  },
                  "404": {
                    "description": "Not Found",
                    "content": {
                      "application/json": {
                        "schema": {
                          "$ref": "#/components/schemas/Error"
                        }
                      }
                    }
                  }
                },
                "delete": {
                  "summary": "Delete a specific TODO item by ID",
                  "parameters": [
                    {
                      "name": "id",
                      "in": "path",
                      "required": true,
                      "schema": {
                        "type": "string"
                      }
                    }
                  ],
                  "responses": {
                    "204": {
                      "description": "No Content",
                      "content": {}
                    },
                    "404": {
                      "description": "Not Found",
                      "content": {
                        "application/json": {
                          "schema": {
                            "$ref": "#/components/schemas/Error"
                          }
                        }
                      }
                    }
                  }
                }
              },
              "/health": {
                "get": {
                  "summary": "Check the health of the server",
                  "responses": {
                    "200": {
                      "description": "Server is healthy",
                      "content": {
                        "application/json": {
                          "schema": {
                            "type": "object",
                            "properties": {
                              "status": {
                                "type": "string"
                              }
                            }
                          }
                        }
                      }
                    }
                  }
                },
                "/todos/{id}": {
                  "get": {
                    "summary": "Retrieve a specific TODO item by ID",
                    "parameters": [
                      {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                          "type": "string"
                        }
                      }
                    ],
                    "responses": {
                      "200": {
                        "description": "The TODO item",
                        "content": {
                          "application/json": {
                            "schema": {
                              "$ref": "#/components/schemas/Todo"
                            }
                          }
                        }
                      },
                      "404": {
                        "description": "Not Found",
                        "content": {
                          "application/json": {
                            "schema": {
                              "$ref": "#/components/schemas/Error"
                            }
                          }
                        }
                      }
                    },
                    "/todos/{id}": {
                      "patch": {
                        "summary": "Update a specific TODO item by ID",
                        "parameters": [
                          {
                            "name": "id",
                            "in": "path",
                            "required": true,
                            "schema": {
                              "type": "string"
                            }
                          }
                        ],
                        "requestBody": {
                          "required": true,
                          "content": {
                            "application/json": {
                              "schema": {
                                "$ref": "#/components/schemas/TodoUpdate"
                              }
                            }
                          }
                        },
                        "responses": {
                          "200": {
                            "description": "The updated TODO item",
                            "content": {
                              "application/json": {
                                "schema": {
                                  "$ref": "#/components/schemas/Todo"
                                }
                              }
                            }
                          },
                          "404": {
                            "description": "Not Found",
                            "content": {
                              "application/json": {
                                "schema": {
                                  "$ref": "#/components/schemas/Error"
                                }
                              }
                            }
                          }
                        },
                        "/todos/{id}": {
                          "delete": {
                            "summary": "Delete a specific TODO item by ID",
                            "parameters": [
                              {
                                "name": "id",
                                "in": "path",
                                "required": true,
                                "schema": {
                                  "type": "string"
                                }
                              }
                            ],
                            "responses": {
                              "204": {
                                "description": "No Content",
                                "content": {}
                              },
                              "404": {
                                "description": "Not Found",
                                "content": {
                                  "application/json": {
                                    "schema": {
                                      "$ref": "#/components/schemas/Error"
                                    }
                                  }
                                }
                              }
                            }
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}